<h1>Messages</h1>
<% @messages.each do |message| %>
  <div class="message">
    <%= message.user.name %>: <%= message.body %>
  </div>
<% end %>

<% if current_user %>
  <%= form_tag "/messages", method: :post do %>
    <div>
      <%= label_tag :body, "New message: " %>
      <%= text_field_tag :body %>
      <%= submit_tag "Submit" %>
    </div>
  <% end %>
<% else %>
  <div>Log in to submit a new message!</div>
<% end %>
